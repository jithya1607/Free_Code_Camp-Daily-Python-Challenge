def decode(message, shift):

    a=''
    for char in message:
        if char.isalpha():
            if char.isupper():
                base='A'
            else:
                base='a'

            current_position= ord(char)-ord(base)
            new_position= (current_position-shift)%26

            a+=chr(new_position+ord(base))

        else:
            a+=char

    return a
